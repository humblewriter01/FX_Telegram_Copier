# =============================================
# Telegram Trading Copier Bot Configuration
# =============================================
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control!
# =============================================

# üîê TELEGRAM BOT CONFIGURATION
# Get this from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# üîê METAAPI CLOUD CONFIGURATION  
# Get your API key from https://metaapi.cloud
META_API_KEY=your_metaapi_cloud_key_here

# üåê WEBHOOK CONFIGURATION (Production)
# Your Render/Heroku app URL (without trailing slash)
# Only needed for production deployment
WEBHOOK_URL=your_render_app_url_here

# üöÄ SERVER CONFIGURATION
PORT=3000

# üîí SECURITY SETTINGS
# Set to "false" only if you have SSL certificate issues
ENABLE_SSL_STRICT=true

# üìä DATA MANAGEMENT
# Maximum number of users the bot can handle
MAX_USERS=1000

# Remove inactive users after X days (default: 30 days)
USER_TTL_DAYS=30

# How often to run cleanup (default: every 24 hours)
CLEANUP_INTERVAL_HOURS=24

# üí∞ RISK MANAGEMENT DEFAULTS
# Default base lot size for each order
DEFAULT_LOT_SIZE=0.01

# Default number of orders per signal
DEFAULT_ORDERS_COUNT=1

# Default maximum risk percentage
DEFAULT_MAX_RISK=5

# Default lot multiplier
DEFAULT_LOT_MULTIPLIER=1

# üéØ TRADING SETTINGS DEFAULTS
# Auto close 50% at TP1
DEFAULT_AUTO_CLOSE_TP1=true

# Move SL to breakeven after TP1 hit
DEFAULT_MOVE_BREAKEVEN=true

# Trigger for breakeven (percentage of TP1 distance)
DEFAULT_BREAKEVEN_TRIGGER=50

# Copy stop loss from signals
DEFAULT_COPY_SL=true

# Copy take profit from signals  
DEFAULT_COPY_TP=true

# Reverse trading signals
DEFAULT_REVERSE_SIGNALS=false

# =============================================
# üö® IMPORTANT SECURITY NOTES
# =============================================
# 1. Never share your actual .env file
# 2. Use different API keys for development and production
# 3. Regularly rotate your API keys
# 4. Monitor your MetaAPI usage and costs
# 5. Use MetaAPI account IDs instead of passwords when possible
# =============================================
